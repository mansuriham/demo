<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="in.growingbiz.amjad.UserActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp">
    <TextView
        android:id="@+id/txt"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:layout_marginTop="-10dp"
        android:textStyle="italic" />

        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:text="LOGOUT" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/txt1"
            android:layout_width="360dp"
            android:layout_height="190dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="180dp">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/yellowo"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noofcust"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/whites"
                    android:textSize="60dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/registered"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_marginTop="-50dp"
                    android:text="Registered Customer"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/yellowo"
                android:layout_gravity="right"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/ic_people_black_24dp" />
                <TextView
                    android:id="@+id/newreg"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="-100dp"
                    android:text="Register"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:textSize="30dp" />




            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/yellowo">
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:id="@+id/noofsms"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height= "60dp"
                    android:src="@drawable/message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Messages"
                    android:textSize="30dp"
                    android:textColor="@color/white"

                    android:textStyle="bold" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/yellowo"
                android:layout_gravity="right">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/ic_wc_loyal_24dp" />
                <TextView
                    android:id="@+id/loyalty"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="-100dp"
                    android:text="Loyalty"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:textSize="30dp" />




            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@color/yellowo">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:text="Birthday"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height= "40dp"
                        android:src="@drawable/ic_cake_black_24dp"/>




                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>



</LinearLayout>


